/* pages/movies/movie-detail/movie-detail.wxss */
/* 引进星星的样式 */
@import "../stars/stars-template.wxss";

.detail_container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  /* CSS3滤镜 图像模糊 */
  -webkit-filter: blur(15px);
}

.head-img-hover {
  width: 100%;
  /* 和.head-img里的height保持一致 */
  height: 320rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  flex-direction: column;
}

.main-title {
  /* 文字尽量用px */
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  color:#f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title {
  color: #631f5d;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  /* 	文本不会换行，文本会在在同一行上继续 */
  white-space: nowrap;
  color: #999;
}

.hr {
  margin-top: 45rpx;
  height: 1px;
  width: 750rpx;
  background-color: #d9d9d9;
}

.synopsis {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  /* 行高 */
  line-height: 40rpx;
  /* 字符间距 */
  letter-spacing: 1px;
}

.cast {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.cast-font {
   color: #999; 
   margin-bottom: 40rpx;
}

.cast-imgs {
  /* 	文本不会换行，文本会在在同一行上继续 */
  white-space: nowrap;
}

.cast-container {
  /* 对行内元素进行排布 */
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  /* 使文字处于图片正下方 */
  text-align: center;
  /* 正常换行 */
  white-space: normal;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
  /* 允许在单词内换行 */
  word-break: break-all;
}