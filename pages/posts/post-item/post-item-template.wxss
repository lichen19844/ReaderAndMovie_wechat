.post-container{
  display: flex;
  flex-direction: column;
  align-item: center;
  margin-top: 20rpx;
  /* margin-bottom: 40rpx; */
  background-color: #fff;
  /* border-bottom: 1px solid #ededed; */
  border-top: 1px solid #ededed;
  /* padding-bottom: 5px;  */
}

.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  /* border: 1px solid; */
}

.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px; 
  font-size: 26rpx;
  /* border: 1px solid; */
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
  /* border: 1px solid; */
}

.post-image{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

